<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".HmeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:scrollbars="none"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/home_tv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Glimpse of Our Training"
            android:padding="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <include
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/home_tv1"
            android:id="@+id/home_glimpses"
            layout="@layout/glimpses_viewflipper"/>


        <LinearLayout
            android:id="@+id/home_ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/home_glimpses"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:orientation="vertical"
                android:background="@drawable/transparent_background"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/web"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Online Training"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:text="Unlock Your Potential with Our Online Training and Internship Programs!"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/transparent_background">

                <ImageView
                    android:src="@drawable/practice"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="Hands-on Workshop Training"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Experience Real-world Learning with Our Hands-on Workshop Training and Internship Opportunities!"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/home_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_below="@+id/home_ll1"
            android:textAlignment="center"
            android:text="Our Services"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:padding="10dp"
            android:layout_below="@id/home_tv2"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_rectangle"/>

        <TextView
            android:id="@+id/home_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Why Choose Us"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_below="@+id/viewpager"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_below="@+id/home_tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/passionate"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passionate"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="15dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/professional"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Professional"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="15dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/help_desk"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Support"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="15dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    </ScrollView>

</FrameLayout>