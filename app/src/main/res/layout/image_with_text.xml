<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardElevation="5dp"
    android:outlineAmbientShadowColor="@color/black"
    app:cardCornerRadius="10dp"
    android:layout_marginRight="10dp"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/Our_services_item_container"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >
    
    <ImageView
        android:paddingTop="10dp"
        android:id="@+id/our_services_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/aurdino"/>

    <TextView
        android:id="@+id/our_services_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding = "10dp"
        android:text="@string/aurdino_title"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/ourservices_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:padding="10dp"
        android:text="@string/aurdino_des"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/rc_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Register Now! "
        android:paddingVertical="10dp"
        android:layout_gravity="center"
        android:backgroundTint="#C4095EA2"
        />
</LinearLayout>
</androidx.cardview.widget.CardView>