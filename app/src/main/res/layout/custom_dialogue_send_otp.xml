<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="#85ADD8E6"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#85ADD8E6"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="OTP Verification"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#001F3F"
            android:padding="10dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/send_otp_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="4-Digit code has been send to "
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/otp_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="bold"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:weightSum="4"
            android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/send_otp_et1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:layout_weight="1"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:maxLength="1"
            />
            <EditText
                android:id="@+id/send_otp_et2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="1"/>
            <EditText
                android:id="@+id/send_otp_et3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="1"/>
            <EditText
                android:id="@+id/send_otp_et4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:layout_weight="1"
                android:padding="10dp"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Couldn't received the code? "
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textColor="#0766B3"
            />

            <TextView
                android:id="@+id/send_otp_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend"
                android:textSize="15dp"
                android:textColor="#ED4D4D"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

        <Button
            android:id="@+id/verify_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0074D9"
            android:text="Verify OTP"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            />

            <Button
                android:id="@+id/send_otp_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#0074D9"
                android:text="Cancel"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="80dp"
                />


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>