<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:orientation="vertical"
    android:background="#85ADD8E6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Change Password"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#001F3F"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        />

    <EditText
        android:id="@+id/forgotpass_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_background"
        android:hint="password"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="10dp"
        android:inputType="textPassword"
        android:textColorHint = "#C9001F3F"
        android:textSize="15sp"
        android:textColor="#001F3F"
        android:drawableLeft="@drawable/baseline_security_24"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/forgotpass_confm_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_background"
        android:hint="confirm password"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="10dp"
        android:inputType="textPassword"
        android:textColorHint = "#C9001F3F"
        android:textSize="15sp"
        android:textColor="#001F3F"
        android:drawableLeft="@drawable/baseline_security_24"
        android:drawablePadding="10dp"/>

    <LinearLayout
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/changePass_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_weight="1"
            android:textSize="13sp"
            android:layout_marginStart="20dp"
            android:backgroundTint="#0074D9"
            />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#0074D9"
            android:textSize="13sp"
            />
    </LinearLayout>


</LinearLayout>