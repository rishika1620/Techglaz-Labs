    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="#001F3F"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/register_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background"
            android:hint="username"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:inputType="textPersonName"
            android:textColorHint="#C9001F3F"
            android:textSize="15sp"
            android:textColor="#001F3F"
            android:drawableLeft="@drawable/round_person_24"
            android:drawablePadding="10dp"
            />

        <EditText
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background"
            android:hint="email"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="10dp"
            android:inputType="textEmailAddress"
            android:textColorHint="#C9001F3F"
            android:textSize="15sp"
            android:textColor="#001F3F"
            android:drawableLeft="@drawable/round_email_24"
            android:drawablePadding="10dp"
            />

        <EditText
            android:id="@+id/register_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background"
            android:hint="phone no."
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="10dp"
            android:inputType="phone"
            android:textColorHint="#C9001F3F"
            android:textSize="15sp"
            android:textColor="#001F3F"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:drawablePadding="10dp"
            />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background"
            android:hint="password"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="10dp"
            android:inputType="textPassword"
            android:textColorHint = "#C9001F3F"
            android:textSize="15sp"
            android:textColor="#001F3F"
            android:drawableLeft="@drawable/baseline_security_24"
            android:drawablePadding="10dp"
            />

        <EditText
            android:id="@+id/register_conf_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background"
            android:hint="confirm password"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="10dp"
            android:inputType="textPassword"
            android:textColorHint="#C9001F3F"
            android:textColor="#001F3F"
            android:textSize="15sp"
            android:drawableLeft="@drawable/baseline_security_24"
            android:drawablePadding="10dp"
            />
        <Button
            android:id="@+id/btn_Signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#0074D9"
            android:text="Submit"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

