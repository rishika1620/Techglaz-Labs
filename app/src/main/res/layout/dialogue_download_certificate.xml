<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="#85ADD8E6"
    android:orientation="vertical"
    android:layout_gravity="center"
    >

    <TextView
        android:id="@+id/certificate_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success!"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#001F3F"
        android:layout_marginVertical="20dp"
        />

    <TextView
        android:id="@+id/certificate_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The certificate is verified, You can download it."
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        />

    <LinearLayout
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

    <Button
        android:id="@+id/certificate_download_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Download Certificate"
        android:layout_weight="1"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:backgroundTint="#0074D9"
        />

    <Button
        android:id="@+id/certificate_cancel_dialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#0074D9"
        android:textSize="13sp"
        />
    </LinearLayout>



</LinearLayout>